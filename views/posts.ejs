<head>
  <link rel="stylesheet" href="/css/posts.css" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <%- include('partials/header') %>
  <style>
    .dropdown-content > a {
      display: none !important;
    }
    .container > .outer {
      width: 100%; /* Full width or adjust as needed */
      max-width: 600px; /* Optional: limit the max width */
      height: auto; /* Let the height grow naturally */
      max-height: 300px; /* Maximum height before scrolling */
      margin: 2px auto; /* Center align and add spacing */
      padding: 2px; /* Inner spacing */
      border: 1px solid black; /* Border for visibility */
      border-radius: 15px; /* Optional: rounded corners */
      overflow-y: auto; /* Enable vertical scrolling */
      overflow-x: hidden; /* Disable horizontal scrolling */
      box-sizing: border-box; /* Include padding in dimensions */
      word-wrap: break-word; /* Wrap long words to fit */
      white-space: pre-wrap; /* Preserve line breaks */
      background-color: #e0e1e4;
    .edit-delete {
      display: flex;
      justify-content: space-between;
      align-items: baseline;
    }
  </style>
</head>
<% if (registeredName) { %>
<h2 id="welcome" style="text-align: center">
  Hi <%= registeredName %>, welcome to your posts!
</h2>
<% } %>

<div class="outer">
  <div class="container">
    <a href="/new"><button class="btn btn-success">New Post</button></a>
    <hr />
    <% posts.forEach(post => { %>
    <div class="outer">
      <h3 style="text-align: right">
        <%= post.title %> <br />
        Author: <%= registeredName %>
      </h3>
      <%= post.content %>
      <div class=".edit-delete">
        <a href="/edit/<%= post.id %>"
          ><button class="btn btn-primary">Edit</button></a
        >
        <a
          href="/delete/<%= post.id %>"
          onclick="return confirm('Are you sure?');"
        >
          <button class="btn btn-danger">Delete</button>
        </a>
      </div>
    </div>
    <% }); %>
  </div>
</div>
<%- include('partials/footer.ejs') %>
